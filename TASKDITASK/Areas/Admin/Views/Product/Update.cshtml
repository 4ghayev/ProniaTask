@model Product

<div class="container">
	<div class="row">

		<h2>Update Product</h2>
		<form method="post" asp-action="Update">
			<div class="form-group">
				<label for="title">Name</label>
				<input asp-for="Name" class="form-control" id="title" placeholder="Name">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>

			<div class="form-group">
				<label for="Description">Description</label>
				<input asp-for="Description" class="form-control" id="Description" placeholder="Description">
				<span class="text-danger" asp-validation-for="Description"></span>
			</div>

			<div class="form-group">
				<label for="ImagePath">ImagePath</label>
				<input asp-for="ImagePath" class="form-control" id="ImagePath" placeholder="ImagePath">
				<span class="text-danger" asp-validation-for="ImagePath"></span>
			</div>

			<div class="form-group">
				<label for="OfferPercentage">Price</label>
				<input asp-for="Price" class="form-control" id="OfferPercentage" placeholder="Price">
				<span class="text-danger" asp-validation-for="Price"></span>
			</div>

			<div class="form-group">
				<label for="CategoryId">Category</label>
				<select asp-for="CategoryId" id="CategoryId">

					<option value="null" disabled selected>Category Secin</option>
					@foreach (Category item in ViewBag.Categories)
					{
						<option value="@item.Id"> @item.Name </option>
					}
				</select>
				<span class="text-danger" asp-validation-for="CategoryId"></span>
			</div>

			<div class="form-group">
				<label asp-for="Rating"></label>
				<input asp-for="Rating" class="form-control" placeholder="1-5">
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-primary">Submit</button>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</div>