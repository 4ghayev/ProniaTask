@model TASKDITASK.ViewModels.ProductUpdateVM
@using TASKDITASK.Models

<div class="container">
    <div class="row">

        <h2>Update Product</h2>

        <form method="post" asp-action="Update" enctype="multipart/form-data">

            
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingImage" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ExistingImage))
            {
                <div class="form-group">
                    <label>Current Image</label><br />
                    <img src="~/assets/images/website-images/@Model.ExistingImage"
                         width="120"
                         class="mb-2" />
                </div>
            }

            <div class="form-group">
                <label>New Image</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId"
                        class="form-control"
                        asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                    <option disabled>Category seçin</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" placeholder="1-5" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
